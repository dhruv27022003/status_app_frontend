# Frontend Environment Variables Template
# Copy this file to .env and update with your values

# API Configuration
# Backend API base URL
VITE_API_URL=http://localhost:3000

# Socket.io Configuration
# WebSocket server URL (usually same as API URL)
VITE_SOCKET_URL=http://localhost:3000

# Frontend Port
# Port for Vite development server
VITE_PORT=3001

# Application Name
# Display name for the application
VITE_APP_NAME=Status Page

# Application URL
# Full URL of the frontend application (used for email links, sharing, etc.)
# Update this to your production URL when deploying
VITE_APP_URL=http://localhost:3001
